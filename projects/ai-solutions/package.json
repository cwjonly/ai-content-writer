{
  "name": "ai-content-writer",
  "version": "2.0.0",
  "description": "智能内容生成工具 - 帮助用户快速创建高质量文章和内容",
  "main": "src/index.js",
  "bin": {
    "ai-writer": "./src/index.js",
    "ai-writer-web": "./web-server.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "web": "node web-server.js",
    "test": "node test/test.js",
    "demo": "node demo.js",
    "init": "node src/index.js init",
    "deploy": "./deploy.sh",
    "deploy:win": "./deploy.bat",
    "docker:build": "docker build -t ai-content-writer .",
    "docker:run": "docker run -p 3000:3000 ai-content-writer",
    "docker:compose": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "dev": "nodemon src/index.js",
    "dev:web": "nodemon web-server.js"
  },
  "keywords": ["AI", "content", "writing", "generator", "tool", "markdown", "template"],
  "author": "AI Solutions",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "inquirer": "^9.2.8",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "figlet": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cwjonly/ai-content-writer.git"
  },
  "bugs": {
    "url": "https://github.com/cwjonly/ai-content-writer/issues"
  },
  "homepage": "https://github.com/cwjonly/ai-content-writer#readme",
  "files": [
    "src/",
    "templates/",
    "public/",
    "web-server.js",
    "demo.js",
    "test/",
    "deploy.sh",
    "deploy.bat",
    "Dockerfile",
    "docker-compose.yml",
    "README.md",
    ".gitignore"
  ]
}